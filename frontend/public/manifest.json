{
  "manifest_version": 3,
  "name": "Vite Extension",
  "version": "1.0.0",
  "description": "A basic example extension with only required keys",
  "action": {
    "default_popup": "index.html"
  }, 
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "audioCapture",
    "audio",
    "microphone"
  ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}