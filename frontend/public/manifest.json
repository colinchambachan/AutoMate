{
  "manifest_version": 3,
  "name": "Vite Extension",
  "version": "1.0.0",
  "description": "A basic example extension with only required keys",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"   
  ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],         
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>" 
  ]
}